<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textView_name"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textViewfruits_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:textColor="#000"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_toEndOf="@+id/imageView30"
        android:layout_toRightOf="@+id/imageView30"
        android:text="TextView"
        android:layout_alignTop="@+id/imageView30" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:gravity="left"
        android:layout_alignBottom="@+id/imageView30"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@+id/textViewfruits_name"
        android:text="TextView" />


</RelativeLayout>