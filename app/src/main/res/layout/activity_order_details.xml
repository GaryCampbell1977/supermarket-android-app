<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="1"
    android:background="@drawable/baground"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


   <TextView
       android:id="@+id/data"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="#000"
       android:text="Your Products "
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_marginStart="38dp"
       tools:layout_constraintTop_creator="1"
       android:layout_marginTop="16dp"
       tools:layout_constraintLeft_creator="1"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginLeft="38dp" />

    <Button
        android:id="@+id/btntotal"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:text="Total bill"
        android:onClick="OnLogin"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="216dp"
        android:layout_marginTop="12dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="216dp" />

    <ListView
        android:id="@+id/list6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/data"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/canceltext"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/data"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="62dp"
        app:layout_constraintLeft_toLeftOf="parent"></ListView>

    <EditText
        android:id="@+id/canceltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter order to be cancel"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cancelbtn"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="-251dp" />

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:onClick="OnCancel"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="54dp"
        android:layout_marginRight="3dp" />


</android.support.constraint.ConstraintLayout>
